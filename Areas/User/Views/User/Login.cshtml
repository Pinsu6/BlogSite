@model BlogApp.Areas.User.Models.Login




<div class="container m-5 p-3">
    @if(ViewBag.message!=null)
    {
        <div class="alert alert-danger w-25 justify-content-center text-center" role="alert">
            @ViewBag.message
            @{ViewBag.message=null;}
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center" style="background-color: #6a1b9a;">
                    <h3 class="mb-0">Login</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-area="User" asp-controller="User" asp-action="Login" method="post">

                        <div class="form-group mb-3">
                            <input asp-for="name" type="hidden" value="abc" />
                            <span asp-validation-for="name" class="text-danger"></span>
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <input type="submit" class="btn text-white" value="Login" style="background-color: #6a1b9a;" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Don't have an account? <a  class="text-primary" asp-action="Register">Register here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
