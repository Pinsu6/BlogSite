@model BlogApp.Areas.User.Models.RegisterUser


<div class="container m-5 p-3">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center" style="background-color: #6a1b9a;">
                    <h3 class="mb-0">Register</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-area="User" asp-controller="User" asp-action="Register" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">First Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LName" class="form-label">Last Name</label>
                            <input asp-for="LName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LName" class="text-danger"></span>
                            
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <Input type="submit" class="btn text-white" value="Register" style="background-color: #6a1b9a;" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Already have an account? <a asp-action="Login" class="text-primary">Login here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
