@model BlogApp.Areas.Blog.Models.Blog
<link href="~/css/blog.css" rel="stylesheet" type="text/css" />

<div class="container m-2 p-4">
    <div class="row">
        <!-- Sidebar -->
       

        <!-- Blog Cards -->
        @if (ViewBag.blog != null)
        {
            
                <div class="col-12 col-md-10 blog-container">

                    <div class="row mt-3 p-3">


                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="card blog-card h-100" style="max-height:22rem">
                                <img src="~/images/@Model.image" class="card-img-top" alt="Blog post image">
                                <div class="card-body">
                                    <h5 class="card-title text-dark">@Model.blogname</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@Model.authname -</h6>
                                    <p class="card-text text-dark">@Model.shortdesc</p>

                                    <a asp-area="Blog" asp-controller="Blog" asp-action="Readmore" asp-route-id="@Model.Id" class="btn">Read More</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            
          
           
           
        }
        else 
        {
            <div class="alert alert-danger  mt-5 w-50 m-auto" role="alert">
                <h3 class="text-center">  Blog Not Found </h3>
            </div>
        }
      
    </div>
</div>
