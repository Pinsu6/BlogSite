<link href="~/css/blog.css" rel="stylesheet" type="text/css" />
@model List<BlogApp.Areas.Blog.Models.Blog>

<partial name="_category" />

    
    
    <div class="col-12 col-md-10 blog-container">
        <div class="container border-5 shadow-md btn col-2 ms-0 mt-5">
            <span>@ViewBag.CategoryName</span>
        </div>
    
        <div class="row mt-3 p-3">
        @foreach (var item in Model)
        {

            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card blog-card h-100" style="max-height:24rem">
                    <img src="~/images/@item.image" class="card-img-top" style="max-height:10rem" alt="Blog post image">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@item.blogname</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.authname -</h6>
                        <p class="card-text text-dark">@item.shortdesc</p>

                        <a asp-area="Blog" asp-controller="Blog" asp-action="Readmore" asp-route-id="@item.Id" class="btn ">Read More</a>
                    </div>
                </div>
            </div>
            }
        </div>
        
    </div>

