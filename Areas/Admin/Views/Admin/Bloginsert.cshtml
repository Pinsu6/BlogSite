@model BlogApp.Areas.Admin.Models.InsertBlogView
<link href="~/css/insertblog.css" rel="stylesheet" />
<link href="~/css/Admin.css" rel="stylesheet" />
<partial name="_sidebar"/>
    <div class="container">
        <div class="form-container">
            <h2 class="text-center " style="color: #6a1b9a;">Upload Your Blog</h2>
        <form asp-action="Bloginsert" asp-controller="Admin" asp-area="Admin" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Enter blog title" asp-for="Blogname" required>
                </div>

                <div class="mb-3">
                    <label for="authorname" class="form-label">Author Name</label>
                    <input type="text" class="form-control" id="authorname" placeholder="Enter your name" asp-for="AuthName" required>
                </div>

                <div class="mb-3">
                <select asp-for="Category" class="form-control">
                    <option value="0" disabled="" selected>--Select Category--</option>
                    @foreach (var item in ViewBag.categoryname)
                    {
                        <option value="@item.CatList">@item.CatList</option>
                    }
                </select>
                </div>

                <div class="mb-3">
                    <label for="sortdesc" class="form-label">Short Description</label>
                    <textarea class="form-control" id="sortdesc" rows="3" placeholder="Enter a short description" asp-for="ShortDesc" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="fulldesc" class="form-label">Full Description</label>
                    <textarea class="form-control" id="fulldesc" rows="6" placeholder="Enter full blog description" asp-for="Descript" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                <input asp-for="Image" type="file" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-purple w-100" >Submit Blog</button>
            </form>
        </div>
    </div>

  
